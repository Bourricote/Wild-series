{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3 poster" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <div>
                <h3>Saisons</h3>
                <ul>
                    {% for season in seasons %}
                        <li><a href="{{ path('wild_show_season', {'id': season.id }) }}" >Saison {{ season.year }} . {{ season.description }}</a> </li>
                    {% endfor %}
                </ul>
            </div>
            <div>
                <h3>Acteurs</h3>
                <ul>
                    {% for actor in program.actors %}
                        <li>{{ actor.name }}</li>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}
