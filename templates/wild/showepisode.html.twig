{% extends 'base.html.twig' %}
{% block title %}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3 poster" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>

            <div>
                <h2>{{ season.description ~ ' . Episode ' ~  episode.number ~ ' . ' ~ episode.title }}</h2>
                <p>{{ episode.synopsis }}</p>
            </div>

            <div>
                <h2>Commentaires</h2>
                {% for comment in comments %}
                    <div>
                        <ul>
                            <li>Auteur : {{ comment.author.username }}</li>
                            <li>Episode : {{ program.title }} - {{ comment.episode.title }}</li>
                            <li>Note : {{ comment.rate }}</li>
                            <li>Commentaire : {{ comment.comment }}</li>
                            {% if app.user.id is defined and app.user.id == comment.author.id or is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('wild_comment_edit', {'id': comment.id}) }}">Supprimer ce commentaire</a></li>
                            {% endif %}
                        </ul>
                    </div>
                    <br>
                {% endfor %}
            </div>

            {% if app.user %}
                <h3>Ajouter un commentaire</h3>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-primary">Ajouter</button>
                {{ form_end(form) }}
            {% endif %}

            <a href="{{ path('wild_show_season', {'id': season.id }) }}">
                Retour à la liste des épisodes
            </a>
            <br>
            <a href="{{ path('wild_show_program', { 'id': program.id }) }}">
                Retour à la liste des saisons
            </a>
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}
