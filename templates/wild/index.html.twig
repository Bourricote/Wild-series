{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}


{% block body %}
    <h1>Toutes les séries de la table program :</h1>
    {% for program in programs %}
        <div>
            <h2><a href="{{ path('wild_show_program', {'id': program.id }) }}">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</a></h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">Retour à l'accueil</a>
    <br>
    <a href="{{ path('wild_show', { 'slug': "fear-the-walking-dead" }) }}">
        Testing show() method from WildController with a real program s slug.
    </a>
    <br>
    <a href="{{ path('wild_show_category', { 'categoryName': "horreur" }) }}">
        Testing showByCategory() method from WildController.
    </a>
    <br>
    <a href="{{ path('wild_show_program', { 'slug': "fear-the-walking-dead" }) }}">
        Testing showByProgram() method from WildController with a real program s slug.
    </a>

{% endblock %}