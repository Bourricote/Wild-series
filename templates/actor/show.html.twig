{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
        <tr class="row">
            <th class="col-3">Id</th>
            <td class="col-9">{{ actor.id }}</td>
        </tr>
        <tr class="row">
            <th class="col-3">Name</th>
            <td class="col-9">{{ actor.name }}</td>
        </tr>
        <tr class="row">
            <th class="col-3">Slug</th>
            <td class="col-9">{{ actor.slug }}</td>
        </tr>
        <tr class="row">
            <th class="col-3">Séries</th>
            <td class="col-9">
                <ul>
                    {% for program in programs %}
                        <li><a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></li>
                    {% else %}
                        <li>Aucune série pour cet acteur</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('actor_edit', {'slug': actor.slug}) }}"><i class="fas fa-pen"></i></a>
    <br>
    <a href="{{ path('actor_index') }}">back to list</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
