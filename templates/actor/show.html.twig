{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
        <tr class="row">
            <th class="col-3">Id</th>
            <td class="col-9">{{ actor.id }}</td>
        </tr>
        <tr class="row">
            <th class="col-3">Name</th>
            <td class="col-9">{{ actor.name }}</td>
        </tr>
        <tr class="row">
            <th class="col-3">Séries</th>
            <td class="col-9">
                <ul>
                    {% for program in programs %}
                        <li><a href="{{ path('program_show', {'id': program.id}) }}">{{ program.title }}</a></li>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('actor_index') }}">back to list</a>

    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
