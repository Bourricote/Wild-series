{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr class="row">
                <th class="col-3">Id</th>
                <td class="col-9">{{ season.id }}</td>
            </tr>
            <tr class="row">
                <th class="col-3">Year</th>
                <td class="col-9">{{ season.year }}</td>
            </tr>
            <tr class="row">
                <th class="col-3">Description</th>
                <td class="col-9">{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}">back to list</a>
    <br>
    <a href="{{ path('season_edit', {'id': season.id}) }}"><i class="fas fa-pen"></i></a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
