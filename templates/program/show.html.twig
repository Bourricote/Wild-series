{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
        <tr class="row">
            <th class="col-3">Id</th>
            <td class="col-9">{{ program.id }}</td>
        </tr>
        <tr class="row">
            <th class="col-3">Title</th>
            <td class="col-9">{{ program.title }}</td>
        </tr>
        <tr class="row">
            <th class="col-3">Summary</th>
            <td class="col-9">{{ program.summary }}</td>
        </tr>
        <tr class="row">
            <th class="col-3">Poster</th>
            <td class="col-9">{{ program.poster }}</td>
        </tr>
        <tr class="row">
            <th class="col-3">Slug</th>
            <td class="col-9">{{ program.slug }}</td>
        </tr>
        <tr class="row">
            <th class="col-3">Acteurs</th>
            <td class="col-9">
                <ul>
                    {% for actor in program.actors %}
                        <li><a href="{{ path('actor_show', {'slug': actor.slug}) }}">{{ actor.name }}</a></li>
                    {% else %}
                        <li>Aucun acteur pour cette s√©rie</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('program_index') }}">back to list</a>
    <br>
    <a href="{{ path('program_edit', {'slug': program.slug}) }}"><i class="fas fa-pen"></i></a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
