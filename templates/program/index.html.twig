{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Program index</h1>

    <h2><a href="{{ path('program_new') }}">Ajouter un programme</a></h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Résumé</th>
                <th>Poster</th>
                <th>Saisons</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td class="col-1">{{ program.id }}</td>
                <td class="col-2">{{ program.title }}</td>
                <td class="col-4">{{ program.summary }}</td>
                <td class="col-3">{{ program.poster }}</td>
                <td class="col-1">
                    <a href="{{ path('season_index') }}">saisons</a>
                </td>
                <td class="col-1">
                    <a href="{{ path('program_show', {'id': program.id}) }}">show</a>
                    <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
