{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr class="row">
                <th class="col-3">Id</th>
                <td class="col-9">{{ episode.id }}</td>
            </tr>
            <tr class="row">
                <th class="col-3">Title</th>
                <td class="col-9">{{ episode.title }}</td>
            </tr>
            <tr class="row">
                <th class="col-3">Number</th>
                <td class="col-9">{{ episode.number }}</td>
            </tr>
            <tr class="row">
                <th class="col-3">Synopsis</th>
                <td class="col-9">{{ episode.synopsis }}</td>
            </tr>
            <tr class="row">
                <th class="col-3">Slug</th>
                <td class="col-9">{{ episode.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}"><i class="fas fa-pen"></i></a>
    <br>
    <a href="{{ path('episode_index') }}">back to list</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
