    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr class="row">
                <th class="col-3">Id</th>
                <td class="col-9">{{ category.id }}</td>
            </tr>
            <tr class="row">
                <th class="col-3">Title</th>
