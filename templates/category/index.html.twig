{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>

    <h2><a href="{{ path('category_new') }}">Ajouter une catégorie</a></h2>

    <table class="table">
        <thead>
            <tr class="row">
                <th class="col-1">Id</th>
                <th class="col-3">Name</th>
                <th class="col-1">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="row">
                <td class="col-1">{{ category.id }}</td>
                <td class="col-3">{{ category.name }}</td>
                <td class="col-1">
                    <a href="{{ path('category_show', {'id': category.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
